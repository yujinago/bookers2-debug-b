<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <div id="user_info">
        <%= render 'info', user: @user %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>
      <h2 class="mt-5">投稿数の前日比・前週比</h2>
      <%= render 'users/compare', today_book: @today_book, yesterday_book: @yesterday_book, last_week_book: @last_week_book, this_week_book: @this_week_book %>
      <h2 class="mt-5">7日分の投稿数</h2>
      <%= render 'users/seven_days', books: @books %>
      <%= render "posts_on_date_form", user: @user %>
    </div>
  </div>
</div>
